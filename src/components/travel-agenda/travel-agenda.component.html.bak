<ion-grid no-padding>
  <ion-row>
    <ion-content #dayContent col-4 col-4-md no-padding>
      <ion-list #dayList>
        <div [dragula]="'day-bag'" [dragulaOptions] = "dragulaOptions" [dragulaModel]="dailyTrips">
          <ion-item-sliding [ngClass]='getDayItemClass(dailyTrip)' *ngFor="let dailyTrip of dailyTrips;index as i">
            <ion-item [ngClass]='getDayItemClass(dailyTrip)' (click)='dayClicked(dailyTrip)'>
              <h1 class='day'>D{{i}}</h1>
              <i style="align-self: center;" class="icon iconfont icon-liebiao2"></i>
              <div class='arrow-right' *ngIf="isActvie(dailyTrip)"></div>
            </ion-item>
            <ion-item-options side="right"> 
              <button ion-button icon-only>
              <ion-icon color='danger' name="trash"></ion-icon>
            </button>
            </ion-item-options>
          </ion-item-sliding>
        </div>
        <ion-item style='text-align: center;'>
          <button ion-button color="secondary" outline (tap)='addDay()'>
          <ion-icon style='color: green' name="add-circle"></ion-icon>
          &nbsp;&nbsp;增加一天
        </button>
        </ion-item>
      </ion-list>
    </ion-content>
    <ion-content #vpContent col-8 col-8-md no-padding>
      <ion-list #vpList>
        <div [dragula]="'vp-bag'" [dragulaOptions] = "dragulaOptions" [dragulaModel]="currentDayTrip.travelViewPoints">
          <div *ngFor="let viewPoint of currentViewPoints;index as i;last as isLast">
            <ion-item-sliding class='vp-item'>
              <ion-item class='vp-item'>
                <ion-grid>
                  <ion-row>
                    <h2 col-2 col-2-md>{{i+1}}</h2>
                    <h3 col-8 col-10-md>{{viewPoint.name}}</h3>
                    <i col-2 style="align-self: center; text-align:right;" class="icon iconfont icon-liebiao2"></i>
                  </ion-row>
                </ion-grid>
              </ion-item>
              <ion-item-options side="right">
                <button ion-button icon-only>
                <ion-icon color='danger' name="trash"></ion-icon>
              </button>
              </ion-item-options>
            </ion-item-sliding>
            <ion-item class='tp-item' *ngIf="!isLast">
              <ion-label>距离: {{viewPoint.distanceDisplay}}</ion-label>
              <ion-select [(ngModel)]="viewPoint.transportationToNext.type">
                <ion-option *ngFor="let type of transportationTypes" [value]="type">{{tranCategory[type]}}</ion-option>
              </ion-select>
            </ion-item>
          </div>
        </div>
        <ion-item style='text-align: center;'>
          <button ion-button color="secondary" outline (tap)='addViewPoint()'>
          <ion-icon style='color: green' name="add-circle"></ion-icon>
          &nbsp;&nbsp;增加项目
        </button>
        </ion-item>
      </ion-list>
    </ion-content>
  </ion-row>
</ion-grid>

